<% layout("/layouts/boilerplate") %>

    <body>
        <div class="container mt-5">
            <div class="card p-4 shadow-sm">
                <h2 class="mb-4">Create a New Listing</h2>
                <form action="/listings" method="POST" enctype="multipart/form-data" class="needs-validation"
                    novalidate>
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="listingTitle" class="form-label">Title</label>
                        <input type="text" id="listingTitle" name="title" class="form-control" required>
                        <div class="invalid-feedback">Please provide a title.</div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="listingDescription" class="form-label">Description</label>
                        <textarea id="listingDescription" name="description" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please provide a description.</div>
                    </div>

                    <!-- Category Dropdown -->
                    <div class="mb-3">
                        <label for="listingCategory" class="form-label">Category</label>
                        <select id="listingCategory" name="category" class="form-select" required>
                            <% categories.forEach(category=> { %>
                                <option value="<%= category %>">
                                    <%= category %>
                                </option>
                                <% }); %>
                        </select>
                        <div class="invalid-feedback">Please select a category.</div>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label for="listingPrice" class="form-label">Price per Day ($)</label>
                        <input type="number" id="listingPrice" name="pricePerDay" class="form-control" min="1" required>
                        <div class="invalid-feedback">Please enter a valid price (minimum $1).</div>
                    </div>

                    <!-- Image File Upload -->
                    <div class="mb-3">
                        <label for="listingImage" class="form-label">Image</label>
                        <input type="file" id="listingImage" name="image" class="form-control" accept="image/*"
                            required>
                        <div class="invalid-feedback">Please upload an image.</div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Create Listing</button>
                </form>
            </div>
        </div>
    </body>